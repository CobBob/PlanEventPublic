@model PlanEvent.ViewModels.DeleteActivityViewModel

@{
    ViewData["Title"] = "DeleteActivity";
}

<div>
    <h4>Are you sure you want to delete the activity?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActivityName)
        </dd>
    </dl>
    
    <form asp-action="DeleteActivity">
        <input type="hidden" asp-for="Guid" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
     <a asp-controller="EditAct" asp-action="MainEdit" asp-route-guid="@Model.Guid" class="btn btn-primary">Back</a>
</div>
