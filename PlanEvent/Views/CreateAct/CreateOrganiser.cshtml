@model PlanEvent.ViewModels.FullActivityViewModel

@{
    ViewData["Title"] = "CreateOrganiser";
}

<h1>Create</h1>

<h4>Please add your name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrganiser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="OrganiserName" class="control-label"></label>
                <input asp-for="OrganiserName" class="form-control" />
                <span asp-validation-for="OrganiserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

