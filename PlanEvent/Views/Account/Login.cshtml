@model PlanEvent.ViewModels.LoginInputModel

@{
    ViewData["Title"] = "Login";
    string success = (ViewData["LoginSuccess"]) != null ? ViewData["LoginSuccess"].ToString() : "";
}

@{ if (success == "False")
    {
        <style>
            .redtext {
                color: red;
            }
        </style>
        <p class="redtext">
            Login was unsuccessful, did you use the right username and password combination?
        </p>
    }
}

<h2>Login</h2>
<div>
    <form method="post" asp-action="Login">
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" />
        </div>
        <input type="submit" value="Login" class="btn btn-primary" />
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">New Account</a>
    </form>
</div>

